name: Release Validation & SBOM

on:
  push:
    branches: [ main ]
    tags: [ 'v*' ]
  workflow_dispatch:

permissions:
  contents: write  # needed to attach assets on tag releases
  actions: read

jobs:
  validate:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout
        uses: actions/checkout@v4

      - name: Set up Python
        uses: actions/setup-python@v5
        with:
          python-version: '3.x'

      - name: Determine version
        id: ver
        run: |
          echo "version=$(grep -Po 'project\(sys-scan VERSION \K[0-9]+\.[0-9]+\.[0-9]+' CMakeLists.txt)" >> $GITHUB_OUTPUT
          echo "Detected version: $(grep -Po 'project\(sys-scan VERSION \K[0-9]+\.[0-9]+\.[0-9]+' CMakeLists.txt)"

      - name: Run release validation
        run: |
          python scripts/release_validate.py \
            --expected-version "${{ steps.ver.outputs.version }}" \
            --schema schema/fleet_report.schema.json \
            --rules-dir rules \
            --output artifacts/release-manifest.json

      - name: Upload validation artifacts
        uses: actions/upload-artifact@v4
        with:
          name: release-validation
          path: artifacts/release-manifest.json

  sbom:
    runs-on: ubuntu-latest
    needs: validate
    if: startsWith(github.ref, 'refs/tags/v')
    steps:
      - name: Checkout
        uses: actions/checkout@v4

      - name: Generate SBOM (SPDX JSON)
        uses: anchore/sbom-action@v0
        with:
          path: .
          format: spdx-json
          output-file: sbom.spdx.json

      - name: Upload SBOM artifact
        uses: actions/upload-artifact@v4
        with:
          name: sbom
          path: sbom.spdx.json

      - name: Attach assets to GitHub Release
        uses: softprops/action-gh-release@v2
        with:
          files: |
            sbom.spdx.json
            artifacts/release-manifest.json
        env:
          GITHUB_TOKEN: ${{ secrets.GITHUB_TOKEN }}
